
@{
    ViewBag.Title = "Grades";
}

<h2>@ViewBag.Title</h2>


<table id="grade" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Student</th>
            <th>Subject</th>
            <th>Rating</th>
            
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#grade").DataTable({
                ajax: {
                    url: "api/grades",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "student.name",
                       
                    },
                    {
                        data: "subject.name",
                    },
                    {
                        data: "rating",
                    },
                    
                ]
            });

           
        });
    </script>
}

